<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="ReportingMapper">
	<select id="getPresent" parameterType="java.util.Map" resultType="java.util.Map">
		<!-- SELECT * FROM tb_report WHERE start_time &lt; NOW() AND expire_time &gt;  NOW() ORDER BY start_time DESC LIMIT 1 -->
		SELECT * FROM tb_report WHERE id = 1 ;
	</select>
	<select id="getReportingByTimeRange" parameterType="java.util.Map" resultType="java.util.Map">
		SELECT * FROM tb_report WHERE ( start_time &lt;= #{startTime} AND expire_time &gt; #{startTime} ) OR ( start_time &lt;= #{expireTime} AND expire_time &gt; #{expireTime} )
		OR (start_time &gt; #{startTime} AND expire_time &lt;= #{expireTime} )
	</select>
</mapper>